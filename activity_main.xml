<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:padding="4dp"
    tools:context=".MainActivity">
<EditText
    android:id="@+id/textEV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Поле ввода информации"
    android:textSize="24sp"
    tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/textTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:text="Результат"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/textEV"
        app:layout_constraintStart_toStartOf="@+id/textEV"/>



    <Button
        android:id="@+id/buttonBTN1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textTV"
        app:layout_constraintStart_toStartOf="@+id/textTV"
        android:text="Сохранить данные"

        android:onClick="onClick"
        tools:ignore="OnClick" />
    <Button
        android:id="@+id/buttonBTN2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/buttonBTN1"
        app:layout_constraintStart_toStartOf="@+id/buttonBTN1"
        android:text="Удалить данные"

        android:onClick="onClick"
        tools:ignore="OnClick" />




            </androidx.constraintlayout.widget.ConstraintLayout>

